{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "BallCam Agent",
  "version": "0.5.4",
  "identifier": "tv.ballcam.agent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BallCam Agent",
        "width": 700,
        "height": 500,
        "resizable": true,
        "center": true,
        "decorations": true,
        "visible": true,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZEQkEwMUEwMjQyNEQ0QzAKUldUQTFDUWtvQUc2YlYwQ0tPR25CSkVFVDR5dmZvL2FTTllhRjh4SXZzUzZnallvVmFQWFhVZGIK",
      "endpoints": [
        "https://github.com/MarlBurroW/ballcam-agent/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }

}
